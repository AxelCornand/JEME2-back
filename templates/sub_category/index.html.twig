{% extends 'base.html.twig' %}

{% block title %}SubCategory index{% endblock %}

{% block body %}
<div class="container">
    <h1>SubCategory index</h1>
    <a href="{{ path('app_sub_category_new') }}" class="btn btn-sm btn-success">Créer une sous-catégorie</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sub_category in sub_categories %}
            <tr>
                <td>{{ sub_category.id }}</td>
                <td>{{ sub_category.name }}</td>
                <td>
                    <a href="{{ path('app_sub_category_show', {'id': sub_category.id}) }}" class="btn btn-sm btn-primary">show</a>
                    <a href="{{ path('app_sub_category_edit', {'id': sub_category.id}) }}" class="btn btn-sm btn-warning">edit</a>
                    {{ include('sub_category/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
{% endblock %}
